<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="edu.navalkishoreb.picscramble.play.NewGame"
    >

  <ProgressBar
      android:id="@+id/counter_view"
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:progress="@integer/max_remembering_time"
      android:max="@integer/max_remembering_time"
      android:layout_width="match_parent"
      android:layout_height="@dimen/counter_height"
      />
  <android.support.v7.widget.RecyclerView
      android:layout_below="@id/counter_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/puzzle_view"
      tools:context="edu.navalkishoreb.picscramble.play.NewGame"
      />
</RelativeLayout>


