<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
      parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/windowBackground</item>
  </style>

  <style name="BottomBar">
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/bottom_bar_height</item>
    <item name="android:background">@drawable/default_button_selector</item>
    <item name="android:textSize">@dimen/bottom_bar_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/default_text_selector</item>
    <item name="android:layout_alignParentBottom">true</item>
  </style>

  <style name="InfoText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/info_text_size</item>
    <item name="android:layout_marginTop">@dimen/info_margin_between_text</item>

  </style>

</resources>
